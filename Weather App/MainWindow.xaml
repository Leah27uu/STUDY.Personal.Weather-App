<Window x:Class="Weather_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather_App"
        mc:Ignorable="d"
        Title="Weather App" Height="350" Width="400">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Input Field -->
            <RowDefinition Height="Auto"/> <!-- Button -->
            <RowDefinition Height="*"/> <!-- Weather Output-->
        </Grid.RowDefinitions>

        <!-- Input Field (Row 0) -->
        <Grid Grid.Row="0" Width="200" Height="30">
            <!-- Placeholder Text-->
            <TextBlock x:Name="PlaceholderText"
                   Text="Enter city name"
                   Foreground="Gray"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Margin="10,0,0,0"
                   IsHitTestVisible="False"/>
            <!-- TextBox For User Input-->
            <TextBox x:Name="CityTextBox"
                 Background="Transparent"
                 VerticalContentAlignment="Center"
                 TextChanged="CityTextBox_TextChanged"/>
        </Grid>

        <!-- Button (Row 1) -->
        <Button Grid.Row="1" 
                Content="Get Weather" 
                Width="100" 
                Height="30" 
                Margin="0,10,0,0" 
                Click="GetWeather_Click"/>
        
        <!-- Weather Output-->
        <TextBlock Grid.Row="2"
                   x:Name="WeatherTextBlock"
                   FontSize="16"
                   TextAlignment="Center"
                   Margin="10"/>
    </Grid>


</Window>
